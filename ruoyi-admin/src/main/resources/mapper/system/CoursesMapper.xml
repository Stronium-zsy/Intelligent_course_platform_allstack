<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.CoursesMapper">
    
    <resultMap type="Courses" id="CoursesResult">
        <result property="courseId"    column="course_id"    />
        <result property="courseSource"    column="course_source"    />
        <result property="courseVideo"    column="course_video"    />
        <result property="courseName"    column="course_name"    />
    </resultMap>

    <sql id="selectCoursesVo">
        select course_id, course_source, course_video, course_name from courses
    </sql>

    <select id="selectCoursesList" parameterType="Courses" resultMap="CoursesResult">
        <include refid="selectCoursesVo"/>
        <where>  
            <if test="courseSource != null  and courseSource != ''"> and course_source = #{courseSource}</if>
            <if test="courseVideo != null  and courseVideo != ''"> and course_video = #{courseVideo}</if>
            <if test="courseName != null  and courseName != ''"> and course_name like concat('%', #{courseName}, '%')</if>
        </where>
    </select>
    
    <select id="selectCoursesByCourseId" parameterType="Long" resultMap="CoursesResult">
        <include refid="selectCoursesVo"/>
        where course_id = #{courseId}
    </select>

    <insert id="insertCourses" parameterType="Courses" useGeneratedKeys="true" keyProperty="courseId">
        insert into courses
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="courseSource != null">course_source,</if>
            <if test="courseVideo != null">course_video,</if>
            <if test="courseName != null and courseName != ''">course_name,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="courseSource != null">#{courseSource},</if>
            <if test="courseVideo != null">#{courseVideo},</if>
            <if test="courseName != null and courseName != ''">#{courseName},</if>
         </trim>
    </insert>

    <update id="updateCourses" parameterType="Courses">
        update courses
        <trim prefix="SET" suffixOverrides=",">
            <if test="courseSource != null">course_source = #{courseSource},</if>
            <if test="courseVideo != null">course_video = #{courseVideo},</if>
            <if test="courseName != null and courseName != ''">course_name = #{courseName},</if>
        </trim>
        where course_id = #{courseId}
    </update>

    <delete id="deleteCoursesByCourseId" parameterType="Long">
        delete from courses where course_id = #{courseId}
    </delete>

    <delete id="deleteCoursesByCourseIds" parameterType="String">
        delete from courses where course_id in 
        <foreach item="courseId" collection="array" open="(" separator="," close=")">
            #{courseId}
        </foreach>
    </delete>
</mapper>